.loading {
  width: 80px;
  height: 10px;
}

.loading view {
  width: 3px;
  height: 100%;
  margin-right: 3px;
  border-radius: 4px;
  display: inline-block;
  background: lightgreen;
  animation: loading 1s ease infinite;
}

@keyframes loading {
  0% {
    background: lightgreen;
    transform: scaleY(1);
  }
  50% {
    background: lightblue;
    transform: scaleY(1.5);
  }

  100% {
    height: 50%;
    background: lightgreen;
    transform: scaleY(1);
  }

